<tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
  <td class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">
    <%= feed.name %>
  </td>
  <td class="px-6 py-4 text-gray-700 dark:text-gray-300">
    <%= feed.url %>
  </td>
  <td class="px-6 py-4 text-right">
    <div class="flex justify-end gap-2">
      <%= link_to edit_feed_path(feed), class: "p-1 text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400" do %>
        <%= render "shared/icons/pencil", class: "w-4 h-4" %>
      <% end %>
      <%= button_to feed_path(feed),
            method: :delete,
            class: "p-1 text-gray-500 hover:text-red-600 dark:text-gray-400 dark:hover:text-red-400",
            form: { data: { turbo_confirm: "Are you sure?" } } do %>
        <%= render "shared/icons/trash", class: "w-4 h-4" %>
      <% end %>
    </div>
  </td>
</tr>
