<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to "← Back to Papers", papers_path, class: "text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300" %>
  </div>

  <div class="border rounded-lg p-6 bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700">
    <h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white"><%= @paper.title %></h1>
    
    <p class="text-gray-600 dark:text-gray-300 mb-6">
      <%= @paper.description %>
    </p>
    
    <div class="flex items-center justify-between mb-6">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        Added <%= @paper.created_at.strftime("%B %d, %Y") %>
      </div>
      
      <% if @paper.pdf.attached? %>
        <%= link_to "Download PDF", download_paper_path(@paper), 
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600" %>
      <% end %>
    </div>
    
    <% if @paper.pdf.attached? && @paper.pdf.previewable? %>
      <div class="border rounded-lg overflow-hidden bg-gray-100 dark:bg-gray-700 border-gray-200 dark:border-gray-600">
        <%= image_tag @paper.pdf.preview(resize_to_fit: [600, nil]), class: "w-full" %>
      </div>
    <% end %>
  </div>
</div>