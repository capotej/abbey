<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Papers</h1>
    <% if authenticated? %>
      <%= link_to "Add Paper", new_link_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600" %>
    <% end %>
  </div>

  <% if @papers.any? %>
    <div class="space-y-6">
      <% @papers.each do |paper| %>
        <div class="border rounded-lg p-4 hover:shadow-md transition-shadow bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700">
          <div class="flex items-start">
            <% if paper.pdf.attached? && paper.pdf.previewable? %>
              <div class="mr-12">
                <%= image_tag paper.pdf.preview(resize_to_fit: [100, 100]), class: "w-24 h-24 object-cover rounded border border-gray-200 dark:border-gray-600" %>
              </div>
            <% end %>
            
            <div class="flex-1 pl-4">
              <h2 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
                <%= link_to paper.title, paper, class: "hover:text-indigo-600 dark:hover:text-indigo-400" %>
              </h2>
              
              <p class="text-gray-600 dark:text-gray-300 mb-3">
                <%= paper.description %>
              </p>
              
              <div class="flex items-center justify-between">
                <div class="text-sm text-gray-500 dark:text-gray-400">
                  Added <%= paper.created_at.strftime("%B %d, %Y") %>
                </div>
                
                <% if paper.pdf.attached? %>
                  <%= link_to "Download PDF", download_paper_path(paper), 
                      class: "inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600" %>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-md text-gray-500 bg-gray-100 dark:bg-gray-700 dark:text-gray-300">
                    PDF Not Available
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          
          <% if authenticated? %>
            <div class="flex justify-end mt-2">
              <div class="flex space-x-2">
                <%= link_to edit_paper_path(paper), class: "text-gray-500 hover:text-indigo-600 dark:text-gray-400 dark:hover:text-indigo-400" do %>
                  <%= render "shared/icons/pencil", class: "h-5 w-5" %>
                <% end %>
                
                <%= link_to paper_path(paper), 
                    data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, 
                    class: "text-gray-500 hover:text-red-600 dark:text-gray-400 dark:hover:text-red-400" do %>
                  <%= render "shared/icons/trash", class: "h-5 w-5" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-8">
      <%= paginate @papers %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 dark:text-gray-400">No papers available yet.</p>
      <div class="mt-4">
        <%= link_to "Add your first paper", new_link_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600" %>
      </div>
    </div>
  <% end %>
</div>