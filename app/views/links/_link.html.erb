<%= link_to link.url,
    rel: "nofollow",
    class: "block bg-white dark:bg-gray-800 rounded-lg p-4 hover:shadow-lg transition-shadow border border-gray-200 dark:border-gray-700 group" do %>
  <article>
    <div class="flex items-baseline justify-between gap-2">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 flex items-center gap-2">
        <%= link.title %>
        <%= render "shared/icons/external_link", class: "w-4 h-4 text-gray-400 dark:text-gray-500" %>
      </h2>
      <time class="text-sm text-gray-500 dark:text-gray-400 shrink-0">
        <%= link.created_at.strftime("%Y-%m-%d") %>
      </time>
    </div>
    <p class="mt-2 text-gray-600 dark:text-gray-300">
      <%= link.description %>
    </p>
  </article>
<% end %>
<% if authenticated? %>
<div class="flex gap-2 mt-2 justify-end">
    <%= link_to edit_link_path(link), class: "p-1 text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400" do %>
        <%= render "shared/icons/pencil", class: "w-4 h-4" %>
    <% end %>

    <%= button_to link_path(link),
        method: :delete,
        class: "p-1 text-gray-500 hover:text-red-600 dark:text-gray-400 dark:hover:text-red-400",
        form: { data: { turbo_confirm: "Are you sure?" } } do %>
        <%= render "shared/icons/trash", class: "w-4 h-4" %>
    <% end %>
</div>
<% end %>
