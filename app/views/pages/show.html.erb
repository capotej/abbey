<% content_for :title do %>
<%= @page.title %> | <%= Rails.application.config.site_name %>
<% end %>

<article class="max-w-2xl mx-auto">
    <header class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            <%= @page.title %>
        </h1>

        <div class="flex flex-col sm:flex-row sm:items-center text-gray-600 dark:text-gray-300 gap-4">
            <% if authenticated? %>
                <%= link_to "Edit", edit_page_path(@page),
                        class: "text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium" %>
            <% end %>
        </div>
    </header>

<div class="text-gray-700 dark:text-gray-200 max-w-none mb-8 leading-relaxed">
    <%= @page.rendered_body.html_safe %>
</div>

</article>
